@model cfbInfo.Web.ViewModels.GameViewModel

@{
    ViewBag.Title = "CFB Info - " + @Html.DisplayFor(model => model.HomeTeam.Name) + " vs. " + @Html.DisplayFor(model => model.VisitingTeam.Name);
}

<div class="container">
    <div class="centered">
        <div>
            <img src="../../Content/Images/@Model.HomeTeam.Image" />
            <div style="color:#@Model.HomeTeam.ColorHexCode"><h1>@Html.DisplayFor(model => model.HomeTeam.Name)</h1></div>
            <div><h1>vs.</h1></div>
            <img src="../../Content/Images/@Model.VisitingTeam.Image" />
            <div style="color:#@Model.VisitingTeam.ColorHexCode"><h1>@Html.DisplayFor(model => model.VisitingTeam.Name)</h1></div>
        </div>
    </div>
</div>

